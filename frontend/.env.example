# HepatoCAI Frontend Environment Variables - Example Configuration
# Copy this file to .env and fill in the appropriate values for your environment

# ======================================
# APPLICATION CONFIGURATION
# ======================================
VITE_APP_NAME=HepatoCAI
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development
VITE_DEBUG=true
VITE_LOG_LEVEL=info

# ======================================
# API CONFIGURATION
# ======================================
# Backend API base URL - change for production
VITE_API_BASE_URL=http://127.0.0.1:8000
# Frontend URL for CORS and OAuth redirects
VITE_FRONTEND_URL=http://localhost:5173
# API request timeout in milliseconds
VITE_API_TIMEOUT=10000
# API version
VITE_API_VERSION=v1
# Number of retry attempts for failed API calls
VITE_API_RETRY_ATTEMPTS=3
# Delay between retry attempts in milliseconds
VITE_API_RETRY_DELAY=1000

# ======================================
# DEVELOPMENT SERVER CONFIGURATION
# ======================================
# Development server port
VITE_DEV_SERVER_PORT=5173

# ======================================
# BUILD CONFIGURATION
# ======================================
# Generate source maps (true/false)
VITE_BUILD_SOURCEMAP=false

# ======================================
# FEATURE FLAGS
# ======================================
# Enable debug console in production (true/false)
VITE_ENABLE_DEBUG_CONSOLE=false
# Enable diagnosis debugging features (true/false)
VITE_ENABLE_DIAGNOSIS_DEBUG=false
# Enable analytics tracking (true/false)
VITE_ENABLE_ANALYTICS=true
# Enable service worker for offline support (true/false)
VITE_ENABLE_SERVICE_WORKER=false
# Enable push notifications (true/false)
VITE_ENABLE_NOTIFICATIONS=true
# Enable offline mode functionality (true/false)
VITE_ENABLE_OFFLINE_MODE=false

# ======================================
# PERFORMANCE CONFIGURATION
# ======================================
# Enable caching (true/false)
VITE_CACHE_ENABLED=true
# Cache TTL in milliseconds (default: 5 minutes)
VITE_CACHE_TTL=300000
# Enable lazy loading (true/false, default: true)
VITE_LAZY_LOADING=true
# Enable image optimization (true/false, default: true)
VITE_IMAGE_OPTIMIZATION=true
# Enable performance monitoring (true/false)
VITE_PERFORMANCE_MONITORING=false
# Debounce delay for input fields in milliseconds
VITE_DEBOUNCE_DELAY=300
# Throttle delay for events in milliseconds
VITE_THROTTLE_DELAY=100

# ======================================
# SEO & META CONFIGURATION
# ======================================
# Application title for browser tab and SEO
VITE_APP_TITLE=HepatoC AI - Advanced Liver Health Diagnosis
# Meta description for SEO
VITE_APP_DESCRIPTION=Advanced AI-powered hepatitis diagnosis and liver health monitoring platform
# Meta keywords for SEO (comma-separated)
VITE_APP_KEYWORDS=hepatitis,liver health,AI diagnosis,medical,healthcare
# Application author
VITE_APP_AUTHOR=HepatoCAI Team
# Theme color for mobile browsers
VITE_APP_THEME_COLOR=#2563EB
# Background color for PWA splash screen
VITE_APP_BACKGROUND_COLOR=#ffffff
